{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts"
  ]
}
