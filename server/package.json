{
  "name": "@anontown/server-root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.14.1",
    "typescript": "^3.8.3",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.4",
    "@types/jest": "^24.0.11",
    "jest": "^24.5.0",
    "ts-jest": "^25.3.1"
  },
  "scripts": {
    "lint": "eslint --ext .ts,.tsx packages/*/src",
